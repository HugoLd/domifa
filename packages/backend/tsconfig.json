{
  "compilerOptions": {
    "paths": {
      "*": ["types/*"]
    },
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ],
  },
  "exclude": ["node_modules", "dist"]
}
